//gradient_effect.xml

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<gradient android:angle="270" android:startColor="@color/colorGrey" android:endColor="#FF0000"/>
</shape>

//red button.xml
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:state_enabled="true"
        android:drawable="@drawable/gradient_effect" >
  </item>
</selector>

//ripple_effect_number.xml
<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#797979">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGrey"></solid>
        </shape>
    </item>
</ripple>


//ripple_effect_operation.xml
<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#573F3F">
    <item>
    <shape android:shape="rectangle">
    <solid android:color="@color/black"></solid>
    </shape>
    </item>
</ripple>



